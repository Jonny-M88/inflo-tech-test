@using UserManagement.Web.Constants
@model UserManagement.Web.Models.Users.UserListViewModel

<h2>User List</h2>

<div>
    <div class="btn-group" role="group">
        <a asp-controller="Users" asp-action="List" class="btn btn-default">Show All</a>
        <a asp-controller="Users" asp-action="FilterByActive" asp-route-isActive="true" class="btn btn-default">Active Only</a>
        <a asp-controller="Users" asp-action="FilterByActive" asp-route-isActive="false" class="btn btn-default">Non Active</a>
    </div>

    <a asp-controller="Users" asp-action="Create" class="btn btn-primary float-end">
        Add User
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Forename</th>
                <th>Surname</th>
                <th>Email</th>
                <th>Date of Birth</th>
                <th>Account Active</th>
                <th style="width: 1px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Forename</td>
                    <td>@item.Surname</td>
                    <td>@item.Email</td>
                    <td>@item.DateOfBirth?.ToString(Constants.DateTimeToStringImplementation)</td>
                    <td>@(item.IsActive ? "Yes" : "No")</td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn btn-default dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" id="btnToggleActions">
                                Actions
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="btnToggleActions">
                                <li><a class="dropdown-item" asp-controller="Users" asp-action="Details" asp-route-id="@item.Id" asp-route-mode="view">View</a></li>
                                <li><a class="dropdown-item" asp-controller="Users" asp-action="Details" asp-route-id="@item.Id" asp-route-mode="edit">Edit</a></li>
                                <li><a class="dropdown-item text-danger" asp-controller="Users" asp-action="Delete" asp-route-id="@item.Id">Delete</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


